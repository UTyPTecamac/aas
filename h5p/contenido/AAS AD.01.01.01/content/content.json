{
  "title": "Video Interactivo Convertido a H5P",
  "language": "es",
  "mainLibrary": "H5P.InteractiveVideo",
  "preloadedDependencies": [
    { "machineName": "H5P.InteractiveVideo", "majorVersion": 1, "minorVersion": 22 },
    { "machineName": "H5P.QuestionSet", "majorVersion": 1, "minorVersion": 17 }
  ],
  "params": {
    "interactiveVideo": {
      "video": [
        {
          "path": "https://youtu.be/WMeQMa49cWQ",
          "mime": "video/youtube"
        }
      ],
      "assets": [],
      "startScreenOptions": {
        "showStartScreen": true,
        "title": "Pulsa para iniciar",
        "shortDescription": "Video interactivo convertido desde tu HTML personalizado",
        "poster": ""
      },
      "summary": {
        "task": {
          "type": "none"
        }
      },
      "interactiveElements": [
        {
          "action": {
            "library": "H5P.Text 1.1",
            "params": {
              "text": "<h2>Bienvenido</h2><p>Ejemplo (convertido desde tu JSON)</p>"
            }
          },
          "x": 40,
          "y": 40,
          "duration": 5,
          "displayType": "button",
          "pause": true,
          "label": "Info",
          "startTime": 5
        },
        {
          "action": {
            "library": "H5P.MultiChoice 1.14",
            "params": {
              "question": "Â¿Ejemplo?",
              "answers": [
                { "text": "A", "correct": true },
                { "text": "B", "correct": false }
              ],
              "behaviour": { "singleAnswer": true }
            }
          },
          "x": 30,
          "y": 30,
          "duration": 10,
          "pause": true,
          "startTime": 15,
          "displayType": "poster"
        }
      ]
    }
  }
}
